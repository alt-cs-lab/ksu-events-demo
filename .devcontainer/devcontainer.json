{
    "name": "KSU Events Demo Dev",
    "image": "mcr.microsoft.com/devcontainers/python:3.12-bullseye",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.pylint",
                "ms-python.vscode-pylance"
            ],
            "settings": {
                "editor.formatOnSave": true
            }
        }
    },
    "postCreateCommand": "pip install -r requirements.txt && pip install git+https://github.com/zombiepaladin/ksu-events.git",
    "forwardPorts": [8000]
}
